                                <div class="col">
                                    <div class="row">
                                        <div class="col text-center my-auto text-uppercase text-break fs-3" style="color:#f2bf17 !important">
                                            <%= elem.nome %> 
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col text-center my-auto text-break" style="font-size: 10px;">
                                            <%= elem.ingredienti %> 
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="row">
